<!DOCTYPE html>
<html>
<head>
	<% include partials/head %>
</head>
<body>
	<% include partials/header %>

	<div class="container">
		<div class="row">
			<div class="col-md-8 col-md-offset-1">
				<div class="col-md-8">
					<h1>
						<b>Create Community<br>
							<small>Add friends be fit together</small>
						</b>
					</h1>
				</div>
			</div>
		</div>

		<br>
		<div class="row">
		<form class="form-horizontal" action="/community">
			<div class="form-group">
					<label for="inputEmail3" class="col-md-4 control-label">Community Name</label>
					<div class="col-md-4">
						<input type="text" class="form-control" placeholder="Community Name" required>
					</div>
			</div>
			<div class="form-group">
					<label for="inputEmail3" class="col-md-4 control-label">Desscription</label>
					<div class="col-md-4">
						<textarea class="form-control" rows="3" placeholder="Description" required></textarea>
					</div>
			</div>
			<div class="form-group">
					<label for="inputEmail3" class="col-md-4 control-label">Invite Friends</label>
					<div class="col-md-4">
						<div class="input-group input-group-md">
							<span class="input-group-addon" id="sizing-addon1">+</span>
							<input type="text" class="form-control" placeholder="Username" aria-describedby="sizing-addon1">
						</div>
					</div>
			</div>
			<div class="form-group">
				<label for="inputEmail3" class="col-md-4 control-label">Logo</label>
				<div class="col-md-4">
					<div style="height:0px;overflow:hidden">
						<input type="file" id="fileInput" name="fileInput" />
					</div>
					<button type="button" class="btn btn-default" onclick="chooseFile();">
						Choose file
					</button>
					<script>
						 function chooseFile() {
								$("#fileInput").click();
						 }
					</script>
				</div>
			</div>
			<div class="form-group">
				<label for="inputEmail3" class="col-md-4 control-label"></label>
				<div class="col-md-4">
					<div class="pull-right">
						<button type="submit" class="btn btn-primary">Create</button>
						<a href="community"><button type="button" class="btn btn-danger">Cancel</button><a>
					</div>
				</div>
			</div>
		</form>
		</div>
	</div>
	<% include partials/footer %>
</body>
</html>
